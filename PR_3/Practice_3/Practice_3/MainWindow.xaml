<Window x:Class="Practice_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Menu">
                <MenuItem Header="Start" Click="Start_Click" ></MenuItem>
                <MenuItem Header="temp" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Viewbox Grid.Row="1">
            <Canvas Name="canvas" Width="800" Height="405" Grid.Row="1">
            <Rectangle Height="210" Width="150" Canvas.Left="0" Canvas.Bottom="0" Fill="Black" ></Rectangle>
            <Rectangle Height="170" Width="500" Canvas.Left="150" Canvas.Bottom="0" Fill="Blue" ></Rectangle>
            <Rectangle Height="210" Width="150" Canvas.Right="0" Canvas.Bottom="0" Fill="Black" ></Rectangle>
            <Rectangle Name="Boat" Height="20" Width="100" Canvas.Left="150" Canvas.Bottom="170" Fill="Brown" ></Rectangle>
            
        </Canvas>
        </Viewbox>
    </Grid>
</Window>
